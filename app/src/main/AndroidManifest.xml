<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uchicago.cs.dboshardy.favrestos.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.uchicago.cs.dboshardy.favrestos.app.FavRestosActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.uchicago.cs.dboshardy.favrestos.app.EditFavRestoActivity"
            android:label="@string/title_activity_edit_fav_resto"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.uchicago.cs.dboshardy.favrestos.app.NotesActivity"
            android:label="@string/title_activity_notes" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
